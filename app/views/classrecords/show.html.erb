<div class='span11'>
	<h1>Attendance sheet for <%= @classrecord.created_at.to_time.strftime("%m/%d/%Y") %></h1>
	<table id="boot" class='table table-hover table-striped filterable'>
		<thead>
			<tr>
				<th class='sort' data-sort='lastname'>Last Name</th>
				<th class='sort' data-sort='firstname'>First Name</th>
				<th>Email</th>
				<th class='sort' data-sort='balance'>Balance</th>
				<th class='sort' data-sort='credit'>Credit</th>
			</tr>
		</thead>
		<tbody>
			<% @classrecord.students.each do |student| %>
			<% student = Student.find(student) %>
			<tr<%= student.in_debt? ? " class=unpaid" : "" %>>
				<td class="lastname"><a href=<%="/students/#{student.id}"%>><%= student.lastname %></td>
				<td class="firstname"><a href=<%="/students/#{student.id}"%>><%= student.firstname %></td>
				<td><%=student.email%></td>
				<td class="balance"><a href=<%="/students/#{student.id}/transactions"%>><%= number_to_currency(student.balance) %></td>
				<td class="credit"><%= student.credit %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>