<h1>Class history</h1>

<table id="boot" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Cost</th>
      <th>Date</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @classrecords.each do |classrecord| %>
      <tr>
        <td>$<%= classrecord.cost %></td>
        <td><%= classrecord.created_at.to_time.strftime("%m/%d/%Y") %></td>
        <td><%= link_to 'View students in this class', classrecord %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Classrecord', new_classrecord_path %>
