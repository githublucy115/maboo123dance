<h1>Class history</h1>

<table id="boot" class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Cost</th>
      <th>Date</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @classrecords.each do |classrecord| %>
      <tr>
        <td>$<%= number_with_precision(classrecord.cost || 0,:precision=>2) %></td>
        <td><%= classrecord.date %></td>
        <td><%= classrecord.location %></td>
        <td><%= link_to 'View students in this class', classrecord %></td>
      </tr>
    <% end %>
  </tbody>
</table>