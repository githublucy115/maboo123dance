<p id="notice"><%= notice %></p>

<% data = { :Name => @student.name, :Email => @student.email, :Balance => number_to_currency(@student.balance), :Credit => @student.credit} %>
<% data.each do |label,val| %>
<p>
  <strong><%=label%>:</strong>
  <%= val %>
</p>
<% end %>

