<h1>List of Students</h1>
<table id='boot' class='table table-hover table-striped'>
	<thead>
		<tr>
			<th>Last Name</th>
			<th>First Name</th>
			<th>Balance</th>
			<th>Dance Credit</td>
			<th>Last attended</th>
		</tr>
	</thead>
	<tbody>
		<% @students.each do |student| %>
		<tr<%=student.in_debt? ? " class=unpaid" : "" %>>
			<td><%= student.name.split.last %></td>
			<td><%= student.name.split.first %></td>
			<td>$<%= student.balance_precise %></td>
			<td><%= student.credit %></td>
			<td>2 Weeks Ago</td>
		</tr>
		<% end %>
	</tbody>
</table>