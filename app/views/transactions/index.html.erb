<h1>Transaction history</h1>

<table id="transactions" class='table table-striped table-hover'>
	<thead>
		<tr>
			<th>Student</th>
			<th>Location</th>
			<th>Date</th>
			<th>Amount</th>
		</tr>
	</thead>
	<tbody>
<% @transactions.each do |transaction| %>
		<tr class=<%=transaction.amount<0 ? "expense" : "payment"%>>
			<td><a href=<%="students/#{transaction.student_id}"%>><%= @student_name[transaction.id] %></a></td>
			<td><a href=<%="classrecords/#{transaction.classrecord_id}"%>><%= @class_location[transaction.id] %></a></td>
			<td><%=transaction.created_at.to_time.strftime("%m/%d/%Y")%></td>
			<td><%=number_to_currency(transaction.amount)%></td>
		</tr>
<% end %>
	</tbody>
</table>